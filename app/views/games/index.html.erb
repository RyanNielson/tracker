<h1>Games</h1>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th>Platform</th>
      <th>Rating</th>
      <th>Released</th>
      <th>Added</th>
      <th>Completed</th>
      <th colspan="2">Operations</th>
    </tr>
  </thead>
  <tbody>
   <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.title, game %></td>
        <td><%= game.platform %></td>
        <td><%= game.rating %></td>
        <td><%= game.released_on %></td>
        <td><%= game.created_at %></td>
        <td><%= game.completed_on %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end %>
  </tbody>
</table>

