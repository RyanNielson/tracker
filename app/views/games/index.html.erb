<h1>Games</h1>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th><%= sortable 'Title' %></th>
      <th><%= sortable 'Platform' %></th>
      <th><%= sortable 'Rating' %></th>
      <th><%= sortable 'Released', 'released_on' %></th>
      <th><%= sortable 'Added', 'created_at' %></th>
      <th><%= sortable 'Completed', 'completed_on' %></th>
      <th colspan="2">Operations</th>
    </tr>
  </thead>
  <tbody>
   <% @games.each do |game| %>
      <tr>
        <td><%= link_to game.title, game %></td>
        <td><%= game.platform %></td>
        <td><%= game.rating %></td>
        <td><%= game.released_on %></td>
        <td><%= game.created_at.strftime('%Y-%m-%d') %></td>
        <td><%= game.completed_on %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Delete', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <%end %>
  </tbody>
</table>

<br>

